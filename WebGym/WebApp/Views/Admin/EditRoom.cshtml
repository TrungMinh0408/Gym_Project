@model WebApp.Models.RoomStatistics

@{
    ViewData["Title"] = "Chỉnh sửa Phòng Tập";
}

<div class="card shadow-sm p-4">
    <h3 class="text-primary mb-3">🏋️‍♀️ Chỉnh sửa thông tin Phòng Tập</h3>

    <form asp-action="EditRoom" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Tên phòng</label>
            <input asp-for="RoomName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Sức chứa</label>
            <input asp-for="Capacity" type="number" class="form-control" min="1" required />
        </div>

        <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
        <a asp-action="RoomStatistics" class="btn btn-secondary">⬅ Quay lại</a>
    </form>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
        border-radius: 12px;
    }

    h3 {
        font-weight: 600;
    }
</style>
