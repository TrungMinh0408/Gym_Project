@model WebApp.Models.UserProgressHistoryViewModel

@{
    ViewData["Title"] = "Sửa tiến trình";
}

<h2>Sửa tiến trình</h2>

<form asp-action="EditUserProgress" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="CreatedAt" class="form-label"></label>
        <input asp-for="CreatedAt" class="form-control" type="date" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BodyFat" class="form-label"></label>
        <input asp-for="BodyFat" class="form-control" />
        <span asp-validation-for="BodyFat" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MuscleMass" class="form-label"></label>
        <input asp-for="MuscleMass" class="form-control" />
        <span asp-validation-for="MuscleMass" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PTUserId" class="form-label"></label>
        <input asp-for="PTUserId" class="form-control" />
        <span asp-validation-for="PTUserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="UserProgress" asp-route-userId="@Model.UserId" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
