@model WebApp.Models.EquipmentViewModel
@using WebApp.Models

<h2 class="mt-3 mb-3">➕ Thêm Thiết bị</h2>

<!-- Debug tí -->
@if (ViewBag.RoomsError != null)
{
    <div class="alert alert-danger">@ViewBag.RoomsError</div>
}
@if (ViewBag.RoomsCount != null)
{
    <div class="alert alert-info">Đang load @ViewBag.RoomsCount phòng.</div>
}

<form asp-action="CreateEquipment" method="post" class="card p-4" style="max-width:600px;margin:auto;">
    ...
    <div class="mb-2">
        <label asp-for="RoomId" class="form-label">Phòng tập</label>
        <select asp-for="RoomId" class="form-select">
            <option value="">-- Chọn phòng --</option>
            @foreach (var room in ViewBag.Rooms as List<RoomStatistics>)
            {
                <option value="@room.Id">@room.RoomName (@room.Capacity chỗ)</option>
            }
        </select>
    </div>
    ...
</form>
