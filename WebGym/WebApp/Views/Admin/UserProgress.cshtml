@model IEnumerable<WebApp.Models.UserProgressHistoryViewModel>

@{
    ViewData["Title"] = "Tất cả tiến trình người dùng";
}

<h2 class="mb-3">Tất cả tiến trình người dùng</h2>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tất cả tiến trình người dùng</h2>

    <a asp-action="CreateUserProgress"
       asp-route-userId="@ViewBag.UserId"
       class="btn btn-success">
        ➕ Thêm tiến trình
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>PT</th>
            <th>Schedule</th>
            <th>Ngày</th>
            <th>Cân nặng</th>
            <th>% Mỡ</th>
            <th>Khối cơ</th>
            <th>Ghi chú</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@(string.IsNullOrEmpty(item.PTName) ? "—" : item.PTName)</td>
                <td>@item.ScheduleName</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Weight</td>
                <td>@item.BodyFat</td>
                <td>@item.MuscleMass</td>
                <td>@item.Note</td>

                <td>
                    <a asp-action="EditUserProgress"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">Sửa</a>

                    <a asp-action="DeleteUserProgress"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Xóa bản ghi này?');">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
