@model WebApp.Models.EquipmentViewModel

<h2 class="mt-3 mb-3">✏️ Sửa Thiết bị</h2>

<form asp-action="EditEquipment" method="post" class="card p-4" style="max-width:600px;margin:auto;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="EquipmentName" class="form-label"></label>
        <input asp-for="EquipmentName" class="form-control" />
        <span asp-validation-for="EquipmentName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ConditionStatus" class="form-label"></label>
        <input asp-for="ConditionStatus" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="RoomId" class="form-label">Phòng tập</label>
        <select asp-for="RoomId" class="form-select">
            <option value="">-- Chọn phòng --</option>
            @foreach (var room in ViewBag.RoomName as List<WebApp.Models.RoomStatistics>)
            {
                <option value="@room.RoomName">@room.RoomName</option>
            }

        </select>
    </div>

    <div class="d-flex justify-content_between mt-3">
        <a asp-action="Equipment" class="btn btn-secondary">⬅️ Quay lại</a>
        <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
