@model WebApp.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<h2 class="mt-3 mb-4 text-center">👤 Thông tin chi tiết người dùng</h2>

<div class="card shadow-lg p-4" style="max-width: 600px; margin: auto;">
    <div class="mb-3">
        <label class="fw-bold">ID:</label>
        <p>@Model.Id</p>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Họ tên:</label>
        <p>@Model.Name</p>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Email:</label>
        <p>@Model.Email</p>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Vai trò (Role):</label>
        <p>@Model.Role</p>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Ngày tạo:</label>
        <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Sửa</a>
        <a asp-action="Statistics" class="btn btn-secondary">⬅️ Quay lại</a>
    </div>
</div>
