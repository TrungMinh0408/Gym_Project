@model WebApp.Models.MembershipPlanViewModel

<h2 class="mt-3 mb-4">➕ Thêm gói membership</h2>

<form asp-action="CreateMembershipPlan" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label class="form-label">Tên gói</label>
        <input asp-for="PlanName" class="form-control" required />
        <span asp-validation-for="PlanName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Thời hạn (tháng)</label>
        <input asp-for="DurationMonths" type="number" class="form-control" required min="1" />
        <span asp-validation-for="DurationMonths" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Giá</label>
        <input asp-for="Price" type="number" step="1000" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="/Admin/MembershipPlans" class="btn btn-secondary">Hủy</a>
</form>
