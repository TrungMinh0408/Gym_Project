@model List<WebApp.Models.RegistrationViewModel>

<h2 class="mb-4">📄 Danh sách đăng ký gói tập</h2>

<a class="btn btn-primary mb-3" href="/Admin/CreateRegistration">+ Đăng ký gói mới</a>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Học viên</th>
            <th>Gói tập</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.PlanName</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>

                <td>
                    @if (item.Status == "Expired")
                    {
                        <span class="badge bg-danger">Hết hạn</span>
                    }
                    else if (item.Status == "ExpiringSoon")
                    {
                        <span class="badge bg-warning text-dark">Sắp hết hạn</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Còn hiệu lực</span>
                    }
                </td>

                <td>
                    <button class="btn btn-info btn-sm" onclick="openExtendModal(@item.Id)">
                        Gia hạn
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>



<!-- ✅ ✅ CHỈ 1 MODAL DUY NHẤT Ở CUỐI TRANG -->
<div class="modal fade" id="extendModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Gia hạn gói tập</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="extendRegId" />

                <label>Chọn thời gian gia hạn:</label>
                <select id="extendMonths" class="form-select">
                    <option value="1">1 tháng</option>
                    <option value="3">3 tháng</option>
                    <option value="6">6 tháng</option>
                    <option value="12">12 tháng</option>
                </select>

                <p class="mt-3 text-muted">
                    Hệ thống sẽ cộng thêm thời gian vào ngày kết thúc hiện tại.
                </p>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary" onclick="confirmExtend()">Xác nhận</button>
            </div>
        </div>
    </div>
</div>



<script>
    let extendModal = new bootstrap.Modal(document.getElementById('extendModal'));

    function openExtendModal(id) {
        document.getElementById("extendRegId").value = id;
        extendModal.show();
    }

    function confirmExtend() {
        let id = document.getElementById("extendRegId").value;
        let months = document.getElementById("extendMonths").value;

        window.location.href = `/Admin/ExtendRegistration?id=${id}&months=${months}`;
    }
</script>

