<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="Gym.PTListPage"  
            Title="PT của bạn">

    <CollectionView x:Name="PTCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Margin="10" Padding="10" Stroke="#ddd" StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Padding="10" Spacing="4">
                        <Label Text="{Binding Name}" 
                               TextColor="#333" 
                               FontAttributes="Bold" 
                               FontSize="16"/>
                        <Label Text="{Binding Email}" 
                               TextColor="#666" 
                               FontSize="14"/>
                        <Button Text="Xem Feedback"
                                CommandParameter="{Binding Id}"
                                Clicked="OnViewFeedbackClicked"
                                FontSize="14"
                                TextColor="White"
                                BackgroundColor="#0066ff"
                                CornerRadius="12"
                                Padding="8,4"
                                HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>