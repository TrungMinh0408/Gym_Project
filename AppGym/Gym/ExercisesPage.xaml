<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.ExercisesPage"
             Title="Bài luyện tập"
             BackgroundColor="#FAFAFA">

    <VerticalStackLayout>

        <!-- 2 TAB -->
        <Grid ColumnDefinitions="*,*" BackgroundColor="White" Padding="10">

            <!-- TAB 1 -->
            <Frame x:Name="TabPose"
                   Grid.Column="0"
                   CornerRadius="10"
                   Padding="10"
                   BackgroundColor="#E0E0E0">
                <Label Text="Chỉnh tư thế"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPoseTabClicked" />
                </Frame.GestureRecognizers>
            </Frame>

            <!-- TAB 2 -->
            <Frame x:Name="TabVideo"
                   Grid.Column="1"
                   CornerRadius="10"
                   Padding="10"
                   BackgroundColor="Transparent">
                <Label Text="Theo Video"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnVideoTabClicked" />
                </Frame.GestureRecognizers>
            </Frame>

        </Grid>

        <!-- CONTENT -->
        <Grid x:Name="ContentArea">

            <!-- LIST POSE -->
            <CollectionView x:Name="PoseList"
                            IsVisible="True"
                            SelectionMode="Single"
                            SelectionChanged="OnPoseSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="80,*">
                            <Image Source="{Binding Images[0]}" WidthRequest="60"/>
                            <Label Grid.Column="1" Text="{Binding Name}" FontSize="20"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- LIST VIDEO -->
            <CollectionView x:Name="VideoList"
                            IsVisible="False"
                            SelectionMode="Single"
                            SelectionChanged="OnVideoSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="80,*">
                            <Image Source="{Binding Thumbnail}" WidthRequest="60"/>
                            <Label Grid.Column="1" Text="{Binding Name}" FontSize="20"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

    </VerticalStackLayout>

</ContentPage>
