<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.CheckinPage"
             Title="Checkin">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Danh sách thành viên" FontAttributes="Bold" FontSize="18"/>
        <CollectionView x:Name="ParticipantsList" HeightRequest="400">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#ccc" Padding="10" StrokeShape="RoundRectangle 8" Margin="0,6" BackgroundColor="White">
                        <HorizontalStackLayout VerticalOptions="Center" Spacing="12">
                            <Label Text="{Binding Name}" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                            <Switch IsToggled="{Binding IsPresent}" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Lưu điểm danh" Clicked="OnSaveClicked" BackgroundColor="#2196F3" TextColor="White" CornerRadius="8"/>
    </VerticalStackLayout>
</ContentPage>