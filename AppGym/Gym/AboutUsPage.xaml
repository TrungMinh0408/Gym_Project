<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.AboutUsPage"
             Title="About Us"
             BackgroundColor="#F5F5F5"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- Header -->
            <Label Text="About Us"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#512DA8"/>

            <!-- Description -->
            <Label Text="Welcome to GymApp! Our mission is to help you achieve your fitness goals with professional guidance and community support."
                   FontSize="16"
                   TextColor="Gray"/>

            <!-- Our Story -->
            <Label Text="Our Story"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#512DA8"/>
            <Label Text="Founded in 2025, GymApp has been dedicated to providing personalized workout plans, virtual classes, and fitness tracking to users all over the world."
                   FontSize="16"
                   TextColor="Gray"/>

            <!-- Mission -->
            <Label Text="Our Mission"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#512DA8"/>
            <Label Text="To empower everyone to live healthier lives by offering easy-to-use fitness solutions and professional coaching at their fingertips."
                   FontSize="16"
                   TextColor="Gray"/>

            <!-- Team -->
            <Label Text="Meet Our Team"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#512DA8"/>
            <Label Text="Our team consists of experienced trainers, nutrition experts, and developers passionate about fitness technology."
                   FontSize="16"
                   TextColor="Gray"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
