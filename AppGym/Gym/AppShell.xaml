<Shell
    x:Class="Gym.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gym"
    Shell.FlyoutBehavior="Disabled">

    <!-- Tabs Navigation -->
    <TabBar>

        <ShellContent
            Title="Home"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate local:HomePage}" />

        <ShellContent
            Title="Schedule"
            Icon="schedule_icon.png"
            ContentTemplate="{DataTemplate local:SchedulePage}" />

        <!-- Progress tab now uses ProgressEntryPage which will redirect by role -->
        <ShellContent
            Title="Progress"
            Icon="progress_icon.png"
            ContentTemplate="{DataTemplate local:ProgressEntryPage}" />

        <ShellContent
            Title="Account"
            Icon="account_icon.jpg"
            ContentTemplate="{DataTemplate local:AccountPage}" />

    </TabBar>
    
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="0,4">
                <StackLayout Spacing="0" HorizontalOptions="Center">
                    <Image Source="{Binding Icon}" HeightRequest="24" WidthRequest="24"/>
                    <Label Text="{Binding Title}" FontSize="10" HorizontalOptions="Center"/>
                </StackLayout>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    
</Shell>