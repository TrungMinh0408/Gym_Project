<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.UserClassesPage"
             Title="My Classes">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="10">
            <CollectionView x:Name="ClassesListView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Padding="12" Margin="0,6" BackgroundColor="White" HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding ClassName}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Room.RoomName, StringFormat='Room: {0}'}" FontSize="14"/>
                                <Label Text="{Binding MaxParticipants, StringFormat='Max participants: {0}'}" FontSize="14"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
