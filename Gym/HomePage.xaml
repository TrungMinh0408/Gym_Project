<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.HomePage"
             Title="Homepage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">



            <!-- Hình banner -->
            <Frame CornerRadius="20" HasShadow="True" Padding="0">
                <Grid>
                    <Image Source="gym_banner.jpg" Aspect="AspectFill"/>
                    <StackLayout VerticalOptions="Center" Padding="20">
                        <Label Text="Start Your Workout"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Button Text="Get Started"
                                BackgroundColor="#0A51B0"
                                TextColor="White"
                                CornerRadius="10"
                                Clicked="OnGetStartedClicked"/>
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Các nút chức năng -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                <Frame Grid.Row="0" Grid.Column="0" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ViewClasses_Clicked" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="classes_icon.jpg" HeightRequest="40"/>
                        <Label Text="Classes" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="0" Grid.Column="1" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ViewChallenges_Clicked" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="appointments_icon.png" HeightRequest="40"/>
                        <Label Text="Challenges" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ViewPosts_Clicked" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="programs_icon.png" HeightRequest="40"/>
                        <Label Text="Posts" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="1" CornerRadius="15" BackgroundColor="White" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ViewMembershipPlan_Clicked" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="membership_icon.png" HeightRequest="40"/>
                        <Label Text="Membership" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
