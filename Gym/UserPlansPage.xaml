<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.UserPlansPage"
             Title="My Plans">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="10">
            <CollectionView x:Name="PlansListView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Padding="12" Margin="0,6" BackgroundColor="White" HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding PlanName}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding DurationMonths, StringFormat='Duration: {0} months'}" FontSize="14"/>
                                <Label Text="{Binding Price, StringFormat='Price: {0:C}'}" FontSize="14"/>
                                <Label Text="{Binding Description}" FontSize="14"/>
                                <Label Text="{Binding CreatedAt, StringFormat='Created: {0:dd/MM/yyyy}'}" FontSize="12"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
