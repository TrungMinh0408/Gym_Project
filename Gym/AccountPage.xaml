<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.AccountPage"
             BackgroundColor="#F4F4F4"
             Title="Account">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="28">

            <!-- Header -->
            <Frame BackgroundColor="White" CornerRadius="16" HasShadow="True" Padding="20">
                <VerticalStackLayout Spacing="6">
                    <Label x:Name="lblName"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#222"/>

                    <Label x:Name="lblEmail"
                           FontSize="15"
                           TextColor="#666"/>

                    <Label x:Name="lblRole"
                           FontSize="15"
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Navigation Group -->
            <VerticalStackLayout Spacing="14">

                <!-- Training Plans -->
                <Frame BackgroundColor="White" CornerRadius="14" HasShadow="True">
                    <Grid Padding="18" ColumnDefinitions="*,auto">
                        <Label Text="Training Plans"
                               FontSize="18"
                               TextColor="#333"
                               VerticalOptions="Center" />
                        <Label Text="›"
                               FontSize="22"
                               TextColor="#999"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserPlansClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>

                <!-- Classes -->
                <Frame BackgroundColor="White" CornerRadius="14" HasShadow="True">
                    <Grid Padding="18" ColumnDefinitions="*,auto">
                        <Label Text="Registered Classes"
                               FontSize="18"
                               TextColor="#333"
                               VerticalOptions="Center" />
                        <Label Text="›"
                               FontSize="22"
                               TextColor="#999"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserClassesClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>

                <!-- Personal Trainer -->
                <Frame BackgroundColor="White" CornerRadius="14" HasShadow="True">
                    <Grid Padding="18" ColumnDefinitions="*,auto">
                        <Label Text="Personal Trainer"
                               FontSize="18"
                               TextColor="#333"
                               VerticalOptions="Center" />
                        <Label Text="›"
                               FontSize="22"
                               TextColor="#999"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPTListClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>

                <!-- About Us -->
                <Frame BackgroundColor="White" CornerRadius="14" HasShadow="True">
                    <Grid Padding="18" ColumnDefinitions="*,auto">
                        <Label Text="About Us"
                               FontSize="18"
                               TextColor="#333"
                               VerticalOptions="Center" />
                        <Label Text="›"
                               FontSize="22"
                               TextColor="#999"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAboutClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>

                <!-- Help Center -->
                <Frame BackgroundColor="White" CornerRadius="14" HasShadow="True">
                    <Grid Padding="18" ColumnDefinitions="*,auto">
                        <Label Text="Help Center"
                               FontSize="18"
                               TextColor="#333"
                               VerticalOptions="Center"/>
                        <Label Text="›"
                               FontSize="22"
                               TextColor="#999"
                               VerticalOptions="Center"
                               Grid.Column="1"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSupportClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>

            </VerticalStackLayout>

            <!-- Logout -->
            <Button Text="Log Out"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    CornerRadius="14"
                    HeightRequest="52"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
