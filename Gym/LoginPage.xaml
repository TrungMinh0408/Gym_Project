<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.LoginPage"
             BackgroundColor="White"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Banner -->
            <Image Source="gym_banner.jpg"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <Label Text="Welcome to Gym!"
                   TextColor="Blue"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <!-- Email -->
            <Border Stroke="#333" StrokeShape="RoundRectangle 10">
                <Entry x:Name="emailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       TextColor="Black"
                       PlaceholderColor="#aaaaaa"
                       BackgroundColor="Transparent"
                       HeightRequest="45" />
            </Border>

            <!-- Password -->
            <Border Stroke="#333" StrokeShape="RoundRectangle 10">
                <Entry x:Name="passwordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       TextColor="Black"
                       PlaceholderColor="#aaaaaa"
                       BackgroundColor="Transparent"
                       HeightRequest="45" />
            </Border>

            <!-- Login -->
            <Button Text="Login"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    Clicked="OnLoginClicked" />

            <!-- Sign up -->
            <Label Text="Don't have an account?"
                   TextColor="#AAAAAA"
                   HorizontalOptions="Center" />

            <Button Text="Sign up"
                    TextColor="#007AFF"
                    BackgroundColor="Transparent"
                    Clicked="OnSignUpClicked"
                    FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
