<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Gym.SchedulePage"
    BackgroundColor="#FAFAFA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- ==== HEADER ==== -->
            <Grid ColumnDefinitions="auto,*,auto" Margin="0,10,0,5">
                <Image Source="arrow_right.png" HeightRequest="50" WidthRequest="50"
       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPrevMonth"/>
                    </Image.GestureRecognizers>
                </Image>


                <Label x:Name="MonthLabel"
                       Grid.Column="1"
                       FontSize="22" HorizontalOptions="Center" VerticalOptions="Center"
                       FontAttributes="Bold" TextColor="#333"/>

                <Image Source="arrow_left.png" Grid.Column="2"
       HeightRequest="50" WidthRequest="50"
       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNextMonth"/>
                    </Image.GestureRecognizers>
                </Image>

            </Grid>

            <!-- ==== DAY OF WEEK ==== -->
            <Grid ColumnDefinitions="*,*,*,*,*,*,*" Padding="0,2">
                <Label Text="Mon" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Tue" Grid.Column="1" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Wed" Grid.Column="2" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Thu" Grid.Column="3" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Fri" Grid.Column="4" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Sat" Grid.Column="5" HorizontalOptions="Center" TextColor="#999"/>
                <Label Text="Sun" Grid.Column="6" HorizontalOptions="Center" TextColor="#999"/>
            </Grid>

            <!-- ==== CALENDAR GRID ==== -->
            <Border Stroke="#E5E5E5" StrokeThickness="1" StrokeShape="RoundRectangle 16"
                    BackgroundColor="White" Padding="12" Margin="0,4"
                    Shadow="Small">
                <CollectionView x:Name="CalendarGrid"
                                SelectionMode="Single"
                                HeightRequest="360"
                                SelectionChanged="CalendarGrid_SelectionChanged">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="7" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="6">
                                <Border Stroke="{Binding BorderColor}"
                                        Background="{Binding BgColor}"
                                        StrokeShape="RoundRectangle 12"
                                        HeightRequest="42" WidthRequest="42"
                                        HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DayText}"
                                           HorizontalOptions="Center" VerticalOptions="Center"
                                           TextColor="{Binding TextColor}" 
                                           FontAttributes="{Binding FontAttributes}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

            <!-- ==== SWITCH MODE ==== -->
            <Frame Padding="6" BackgroundColor="White" CornerRadius="12" HasShadow="True">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="DayModeButton" Text="Theo ngày" WidthRequest="140"
                            Clicked="DayModeButton_Clicked"
                            BackgroundColor="#2196F3" TextColor="White" CornerRadius="10"/>

                    <Button x:Name="WeekModeButton" Text="Theo tuần" WidthRequest="140"
                            Clicked="WeekModeButton_Clicked"
                            BackgroundColor="#EEEEEE" TextColor="Black" CornerRadius="10"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- ==== LIST DAY SESSIONS ==== -->
            <CollectionView x:Name="DaySessionsList" HeightRequest="350" Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,8" Padding="12"
                                Stroke="#DDD" StrokeShape="RoundRectangle 16"
                                BackgroundColor="White" Shadow="Small">

                            <Grid ColumnDefinitions="*,auto" ColumnSpacing="12">
                                <VerticalStackLayout>
                                    <Label Text="{Binding ClassName}" FontSize="17" FontAttributes="Bold"/>
                                    <Label>
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0:dddd HH:mm} - {1:HH:mm}">
                                                <Binding Path="StartTime"/>
                                                <Binding Path="EndTime"/>
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                    <Label Text="{Binding RoomName}" TextColor="#7E57C2"/>
                                    <Label Text="{Binding PTName}" TextColor="#009688"/>
                                </VerticalStackLayout>

                                <Button Text="Điểm danh"
                                        CommandParameter="{Binding ScheduleId}"
                                        Clicked="OnCheckinButtonClicked"
                                        IsVisible="{Binding ShowCheckin}"
                                        BackgroundColor="#2196F3" TextColor="White"
                                        CornerRadius="10" HeightRequest="44" WidthRequest="110"/>
                            </Grid>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- ==== WEEK MODE ==== -->
            <CollectionView x:Name="WeekSessionsList" IsVisible="False" Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Label Text="{Binding DateText}" FontAttributes="Bold" FontSize="18" Margin="0,10,0,0"/>

                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Sessions}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,6" Padding="12"
                                                Stroke="#DDD" StrokeShape="RoundRectangle 16"
                                                BackgroundColor="White" Shadow="Small">
                                            <HorizontalStackLayout Spacing="12">

                                                <VerticalStackLayout>
                                                    <Label Text="{Binding ClassName}" FontAttributes="Bold" FontSize="16"/>
                                                    <Label>
                                                        <Label.Text>
                                                            <MultiBinding StringFormat="{}{0:HH:mm} - {1:HH:mm}">
                                                                <Binding Path="StartTime"/>
                                                                <Binding Path="EndTime"/>
                                                            </MultiBinding>
                                                        </Label.Text>
                                                    </Label>
                                                    <Label Text="{Binding RoomName}" TextColor="#7E57C2"/>
                                                    <Label Text="{Binding PTName}" TextColor="#009688"/>
                                                </VerticalStackLayout>

                                                <Button Text="Điểm danh"
                                                        CommandParameter="{Binding ScheduleId}"
                                                        Clicked="OnCheckinButtonClicked"
                                                        IsVisible="{Binding ShowCheckin}"
                                                        BackgroundColor="#2196F3" TextColor="White"
                                                        CornerRadius="10" WidthRequest="110" HeightRequest="44"/>
                                            </HorizontalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
