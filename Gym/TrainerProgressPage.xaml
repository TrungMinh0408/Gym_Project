<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.TrainerProgressPage"
             Title="Progress"
             NavigationPage.HasBackButton="False">

    <!-- Ẩn thêm Shell back button -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="My Students" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <CollectionView x:Name="StudentsList" SelectionMode="None" HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#DDD" StrokeShape="RoundRectangle 10" Padding="10" Margin="0,6" BackgroundColor="White">
                        <HorizontalStackLayout VerticalOptions="Center" Spacing="12">
                            <VerticalStackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Email}" FontSize="13" TextColor="Gray"/>
                            </VerticalStackLayout>

                            <Button Text="Progress" Clicked="OnViewProgressClicked" CommandParameter="{Binding Id}" />
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="EmptyLabel" Text="No students assigned." IsVisible="False" HorizontalOptions="Center" TextColor="Gray"/>
    </VerticalStackLayout>
</ContentPage>
