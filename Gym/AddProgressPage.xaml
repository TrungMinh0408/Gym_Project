<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.AddProgressPage"
             Title="Add / Edit Progress">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="18">

            <!-- Title -->
            <Label x:Name="HeaderLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- DATE -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Date" FontAttributes="Bold"/>
                <DatePicker x:Name="DateInput"/>
            </VerticalStackLayout>

            <!-- WEIGHT -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Weight (kg)" FontAttributes="Bold"/>
                <Entry x:Name="WeightInput"
                       Keyboard="Numeric"
                       Placeholder="e.g. 70.5"/>
            </VerticalStackLayout>

            <!-- BODY FAT -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Body Fat (%)" FontAttributes="Bold"/>
                <Entry x:Name="BodyFatInput"
                       Keyboard="Numeric"
                       Placeholder="e.g. 18.5"/>
            </VerticalStackLayout>

            <!-- MUSCLE MASS -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Muscle Mass (%)" FontAttributes="Bold"/>
                <Entry x:Name="MuscleInput"
                       Keyboard="Numeric"
                       Placeholder="e.g. 35.0"/>
            </VerticalStackLayout>

            <!-- NOTES -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Notes" FontAttributes="Bold"/>
                <Editor x:Name="NotesInput"
                        HeightRequest="120"
                        Placeholder="Enter workout notes or progress details..."/>
            </VerticalStackLayout>

            <!-- ERROR -->
            <Label x:Name="ErrorLabel"
                   TextColor="Crimson"
                   FontAttributes="Bold"
                   IsVisible="False"
                   Margin="0,5,0,0"/>

            <!-- BUTTONS -->
            <HorizontalStackLayout Spacing="16"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,0">

                <Button x:Name="SaveButton"
                        Text="Save"
                        WidthRequest="140"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="OnSaveClicked"/>

            </HorizontalStackLayout>

            <!-- LOADING -->
            <ActivityIndicator x:Name="BusyIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
