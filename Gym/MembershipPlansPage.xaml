<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.MembershipPlansPage"
             Title="Membership Plans"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <StackLayout Padding="20">
            <Label Text="Membership Plans"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#512DA8"/>
            <Label Text="Chọn gói tập phù hợp với bạn"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>
        </StackLayout>

        <!-- Danh sách gói tập -->
        <CollectionView x:Name="PlansCollection"
                        Grid.Row="1"
                        Margin="10"
                        ItemsLayout="VerticalGrid, 2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="15"
                           Padding="15"
                           Margin="5"
                           BackgroundColor="White"
                           BorderColor="#E0E0E0"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="8">

                            <Label Text="{Binding PlanName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#512DA8"/>

                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>

                            <HorizontalStackLayout>
                                <Label Text="Thời hạn:" FontAttributes="Bold" FontSize="14"/>
                                <Label Text="{Binding DurationMonths, StringFormat=' {0} tháng'}" FontSize="14"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <Label Text="Giá:" FontAttributes="Bold" FontSize="14"/>
                                <Label Text="{Binding Price, StringFormat=' {0:C}'}" FontSize="14" TextColor="#2E7D32"/>
                            </HorizontalStackLayout>

                            <!-- Nút đăng ký -->
                            <Button Text="Đăng ký ngay"
                                    BackgroundColor="#512DA8"
                                    TextColor="White"
                                    CornerRadius="10"
                                    FontAttributes="Bold"
                                    Clicked="PaymentConfirmationPage_Clicked"
                                    CommandParameter="{Binding Id}"/>


                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
